root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.json]
indent_size = 2

[*.md]
indent_size = 2
max_line_length = 80

[*.ps1]
trim_trailing_whitespace = true
insert_final_newline = true

# Xml files
[*.{xml,config,ps1xml}]
indent_size = 2
